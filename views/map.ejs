<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>TimeTraveller</title>

    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <link rel="stylesheet" href="/css/map.css" />
    <link rel="stylesheet" href="/css/leaflet.css" />
    <script src="/js/vendor/leaflet.js"></script>
    <script src="/js/vendor/Leaflet.MovingMarker.js"></script>
    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/Timetraveller.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">TimeTraveller</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <% maps.forEach(function(map) { %>
            <li class="<%= (map.active ? 'active' : '') %>"><a href="/m/<%= map.slug %>"><%= map.name %></a></li>
            <% }) %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div id="map" data-id="<%= map.id %>" data-slug="<%= map.slug %>"></div>

    <nav class="navbar navbar-default navbar-fixed-bottom">
      <div class="container">
        <div class="navbar-collapse">
        <!-- <a class="navbar-brand timetraveller-date" href="#" style="min-width:200px">TimeTraveller</a>-->
          <ul class="nav navbar-nav">
            <li class="timetraveller-slower"><a href="#" class="btnPlay"><span class="glyphicon glyphicon-backward" aria-hidden="true"></span></a></li>
            <li class="timetraveller-pause"><a href="#" class="btnPlay"><span class="glyphicon glyphicon-pause" aria-hidden="true"></span></a></li>
            <li class="timetraveller-play"><a href="#" class="btnPlay"><span class="glyphicon glyphicon-play" aria-hidden="true"></span></a></li>
            <li class="timetraveller-faster"><a href="#" class="btnPlay"><span class="glyphicon glyphicon-forward" aria-hidden="true"></span></a></li>
            <li><a href="#" class="timetraveller-speed">Speed: 1x</a></li>
            <li><a href="#" class="timetraveller-clock"></a></li>
          </ul>
        </div>
      </div>
    </nav>

    <script type="text/javascript">
    var tiles = <%-
      JSON.stringify(map.tiles)
    %>
    </script>

    <script src="/js/vendor/jquery.min.js"></script>
    <script src="/js/vendor/bootstrap.min.js"></script>

    <script src="/js/map.js"></script>
  </body>
</html>
