<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>TimeTraveller</title>

    <link href="/css/bootstrap.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

    <link rel="stylesheet" href="/css/vis.min.css" />
    <link rel="stylesheet" href="/css/leaflet.css" />
    <link rel="stylesheet" href="/css/map.css" />

    <script src="/js/vendor/leaflet.js"></script>
    <script src="/js/Leaflet.HtmlIcon.js"></script>
    <script src="/js/vendor/LeafletPlayback.js"></script>
    <script src="/js/vendor/vis.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>

    <script src="/js/Timetraveller.js"></script>
    <script src="/<%= map.id %>/map.js"></script>
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/<%= map.id %>">TimeTraveller</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <% maps.forEach(function(m) { %>
            <li class="<%= (m.id == map.id ? 'active' : '') %>"><a href="/<%= m.id %>"><%= m.name %></a></li>
            <% }) %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div id="map" data-id="<%= map.id %>"></div>

    <nav class="navbar navbar-default navbar-fixed-bottom">
      <div class="container">
        <div class="navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="timetraveller-slower"><a class="btnPlay"><span class="glyphicon glyphicon-backward" aria-hidden="true"></span></a></li>
            <li class="timetraveller-stop active"><a class="btnPlay"><span class="glyphicon glyphicon-pause" aria-hidden="true"></span></a></li>
            <li class="timetraveller-play"><a class="btnPlay"><span class="glyphicon glyphicon-play" aria-hidden="true"></span></a></li>
            <li class="timetraveller-faster"><a class="btnPlay"><span class="glyphicon glyphicon-forward" aria-hidden="true"></span></a></li>
            <li><p class="timetraveller-speed">Speed: 1x</p></li>
            <li><p class="timetraveller-clock"><%= date %></p></li>
          </ul>

          <div id="timeline">
              <div id="centermarker"></div>
          </div>
        </div>
      </div>
    </nav>

    <script src="/js/vendor/jquery.min.js"></script>
    <script src="/js/vendor/bootstrap.min.js"></script>

    <script src="/js/map.js"></script>
  </body>
</html>
