<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>TimeTraveller</title>

    <link href="/css/vendor/bootstrap.min.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
      <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">TimeTraveller</a>
        </div>
        <div id="navbar" class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#about">About</a></li>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">

      <div class="bs-docs-section page-header">
        <form class="form-horizontal" action="/new" method="post">
          <div class="row">
            <div class="col-lg-12">
              <div class="page-header">
                <h1 id="forms">Create new Instance</h1>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-6">
              <div class="well bs-component">
                <fieldset>
                  <legend>General</legend>
                  <div class="form-group">
                    <label for="inputName" class="col-lg-2 control-label">Name</label>
                    <div class="col-lg-10">
                      <input name="name" class="form-control" id="inputName" placeholder="Name" type="text" value="<%= populate.name %>">
                      <span class="help-block">
                        The name is displayed on top of the map.
                      </span>
                      <% if (errors && errors.name) { %>
                      <div class="alert alert-dismissible alert-danger">
                        <%=
                          errors.name.map(function(err) {
                            return err.msg
                          }).join('<br>')
                        %>
                      </div>
                      <% } %>
                    </div>
                  </div>
                  <div class="form-group">
                    <label for="inputSlug" class="col-lg-2 control-label">Slug</label>
                    <div class="col-lg-10">
                      <div class="input-group">
                        <span class="input-group-addon"><%= baseUri %></span>
                        <input name="slug" class="form-control" type="text">
                      </div>
                      <span class="help-block">
                        The URL your map will be accessable.
                      </span>
                      <% if (errors && errors.slug) { %>
                      <div class="alert alert-dismissible alert-danger">
                        <%=
                          errors.slug.map(function(err) {
                            return err.msg
                          }).join('<br>')
                        %>
                      </div>
                      <% } %>
                    </div>
                  </div>
                </fieldset>
              </div>
            </div>
            <div class="col-lg-6">
              <div class="well bs-component">
                <fieldset>
                  <legend>Map Styles</legend>
                  <% for (var tileKey in tiles) { %>
                  <% var tile = tiles[tileKey] %>
                  <div class="form-group">
                    <div class="checkbox col-lg-4">
                      <label for="">
                        <input type="checkbox"> <%= tile.name %>
                      </label>
                    </div>
                    <div class="col-lg-8">
                      [[ Tile Preview ]]
                    </div>
                  </div>
                  <% } %>
                </fieldset>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-lg-12">
              <input type="submit" class="btn btn-primary" value="Create new instance" />
            </div>
          </div>
        </form>
      </div>

      <footer>
        <div class="row">
          <div class="col-lg-12">
            <p>Made with datalove</p>
          </div>
        </div>

      </footer>
    </div>

    <script src="/js/vendor/jquery.min.js"></script>
    <script src="/js/vendor/bootstrap.min.js"></script>
  </body>
</html>
